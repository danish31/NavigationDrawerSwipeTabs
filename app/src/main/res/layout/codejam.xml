<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    >
    <android.support.design.widget.FloatingActionButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:backgroundTint="#a2b4b4b4"
        android:src="@drawable/ic_add_black_24dp"
        android:onClick="codejam"/>

    <RelativeLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <ImageView
            android:id="@+id/app_bar_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView"
            android:layout_below="@id/app_bar_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Codejam"
            android:textSize="40sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#e7e3e3"
            android:background="#020610"
            />


        <ScrollView
            android:layout_below="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bc">

            <LinearLayout
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:id="@+id/cart1"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#5a000000"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/date"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/image1"
                            android:paddingTop="7dp"
                            android:textSize="25sp"
                            android:text="Date : 03.10.18"
                            android:textColor="#bfbfbf"/>

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/time" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image2"
                            android:layout_below="@id/text1"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Time : 11:00 am"
                            android:textColor="#bfbfbf"/>
                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/venue"/>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image3"
                            android:layout_below="@id/text2"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Venue : CSE Lab III - AC II"
                            android:textColor="#bfbfbf"/>
                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/team"/>
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image4"
                            android:layout_below="@id/text3"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Team Members : 1"
                            android:textColor="#bfbfbf"/>
                        <ImageView
                            android:id="@+id/image5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/image4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/contact"/>
                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/image5"
                            android:layout_below="@id/text4"
                            android:paddingTop="6dp"
                            android:textSize="25sp"
                            android:text="Contact : 9862273625"
                            android:textColor="#bfbfbf"/>




                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#5a000000">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textdes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Description"
                            android:textSize="30sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textdes"
                            android:text="Google Code Jam is an international programming competition hosted and administered by Google. The competition began in 2003 as a means to identify top engineering talent for potential employment at Google. The competition consists of a set of algorithmic problems which must be solved in a fixed amount of time. Competitors may use any programming language and development environment to obtain their solutions. From 2003 to 2007, Google Code Jam was deployed on Topcoder's platform and had quite different rule. Since 2008 Google has developed their own dedicated infrastructure for the contest. "
                            android:textColor="#bfbfbf"
                            android:gravity="fill_horizontal"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"

                            />

                    </RelativeLayout>



                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>






